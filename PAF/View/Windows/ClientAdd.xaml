<Window x:Class="PAF.View.Windows.ClientAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAF.View.Windows"
        mc:Ignorable="d"
        Title="ClientAdd" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource  MaterialDesignTextBlock}">
            <Setter Property="Foreground" Value="Gray" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Grid>
                <TextBox />
                <TextBlock Text="Фамилия" Style="{StaticResource TextBlockStyle}"/>
            </Grid>
            <Grid>
                <TextBox />
                <TextBlock Text="Имя" Style="{StaticResource TextBlockStyle}"/>
            </Grid>
            <Grid>
                <TextBox />
                <TextBlock Text="Отчество" Style="{StaticResource TextBlockStyle}"/>
            </Grid>
            <Grid>
                <TextBox />
                <TextBlock Text="Пол" Style="{StaticResource TextBlockStyle}"/>
            </Grid>
            <Grid>
                <TextBox />
                <TextBlock Text="Телефон" Style="{StaticResource TextBlockStyle}"/>
            </Grid>
            <Grid>
                <TextBox />
                <TextBlock Text="Зарплата" Style="{StaticResource TextBlockStyle}"/>
            </Grid>
        </StackPanel>
    
    </Grid>
</Window>
